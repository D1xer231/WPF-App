<Window x:Class="Myapp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Myapp8"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="#154F3C"
    Title="MyStore" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1">
            <Image Source="/img/shopping-cart2.png" Width="100" Height="100" Margin="35"/>
            <Label x:Name="ZeroCartField" Content="Ваша корзина сейчас пуста" Foreground="#D9D9D9" HorizontalAlignment="Center" FontSize="15" FontFamily="Arial Black"/>
            <Label x:Name="QiauntityField" Content="Количество: 0шт" Foreground="#D9D9D9" HorizontalAlignment="Left" FontSize="13" FontFamily="Arial Black" Margin="25, 0, 0, 0" Visibility="Hidden"/>
            <Label x:Name="TotalPriceField" Content="Общая стоимость: €0" Foreground="#D9D9D9" HorizontalAlignment="Left" FontSize="13" FontFamily="Arial Black" Margin="25, 0, 0, 0" Visibility="Hidden"/>
            <Button Click="PayBtn_Click" Content="Оплатить" Margin="30" Height="25" Width="148" Background="#026926" HorizontalAlignment="Center" Foreground="#FFB8DEE2" FontSize="16"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <Label Content="Магазин товаров" Foreground="#D9D9D9" HorizontalAlignment="Center" FontSize="22" FontFamily="Arial Black" Margin="10" FontWeight="Bold" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="False" Grid.Column="1" Grid.Row="1">
            <ListBox x:Name="ItemsList" Margin="10" ItemsSource="{Binding Item}" Background="Transparent" BorderThickness="0" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="10" Background="#026926" CornerRadius="10" BorderBrush="Transparent">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="220">
                                <!-- Картинка -->
                                <Image Source="{Binding ImagePath}"
                                   Height="120"
                                   Width="200"
                                   Stretch="UniformToFill"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Center"/>       

                                <!-- Название -->
                                <TextBlock Text="{Binding Name}"
                                   Foreground="#D9D9D9"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,5"/>

                                <!-- Описание -->
                                <TextBlock Text="{Binding Description}"
                                   Foreground="#D9D9D9"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>

                                <!-- Цена -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Цена: "
                                       Foreground="LightGreen"
                                       FontWeight="Bold"
                                       FontSize="14"/>
                                    <TextBlock Text="{Binding Price, StringFormat=' {0} €'}"
                                       Foreground="#D9D9D9"
                                       FontSize="14"/>
                                </StackPanel>

                                <!-- Кнопка -->
                                <Button Content="В корзину"
                                    Margin="10"
                                    Width="120"
                                    Height="30"
                                    Background="#017d2c"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderBrush="Transparent"
                                    HorizontalAlignment="Center"
                                    Cursor="Hand"
                                    Click="AddToCart_Click" />   
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Window>
